    "version": "0.2.0",
    "compounds": [
        {
            "name": "Frontend + Backend",
            "configurations": ["Python: Flask Backend", "Python: Flask Frontend"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Python: Flask Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "backend",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Flask Frontend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "frontend",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port", 
                "8000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}